<div class="row">
    <div class="chosen-word-wrapper col-xs-12 text-center">
        <ul class="chosen-word">
            {{#each (split word)}}
            <li><button type="button" class="chosen-letter btn btn-info btn-lg" data-letter="{{this}}">{{this}}<span class="chosen-letter-score">{{getScore this}}</span></button></li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="user-input-wrapper col-xs-12">
        <input type="text" id="user-input" placeholder="Press Enter to Submit Word" />
        <p class="swap-warning">SHIFT PRESSED: LETTER WILL BE SWAPPED!</p>
    </div>
    <div class="form-buttons col-xs-12 text-center">
        <a type="button" id="generate-word" class="btn btn-success">Generate New Word</a> 
        <a type="button" id="submit-word" class="btn btn-warning">Submit Word</a> 
        <a type="button" id="clear-word" class="btn btn-danger">Clear</a> 
    </div>
</div>

<div class="row">
    <div class="anagrams-wrapper col-xs-12">
        {{#each anagrams}}
        <div class="anagram-words-wrapper">
            <h5>{{@key}} Letter Words</h5>
            <ul id="{{@key}}-words" class="anagram-words">
                {{#each this}}
                <li>
                    <ul class="anagram-letters">
                        {{#each (split this.word)}}
                        <li class="anagram-letter"></li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </div>
        {{/each}}
    </div>
</div>